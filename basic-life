console.log('This is my basic code cheat sheet'); 
// this code won't run either but it's only one line of code you can't go on two lines 

// OPERATORS OPERATORS OPERATORS
console.log(3.5 + 30);
console.log(2020 - 1969);
console.log(65/240);
console.log(0.2708*100);
// operators same as excel easy to remember 

// STRING CONCENTRATION 
console.log('Hello'+' '+'World');
// remember to log in the spaces when using the + sign 

//BUILT IN OBJECTS - MATH

console.log(Math.floor(Math.random()*100)); //rounds down, then brackets, then generate a number between 0 and 1, then times that by the number required 

console.log(Math.ceil(43.8)); // rounds up 

console.log(Number.isInteger(2017)); // checks if a number is an integer 

// USING OPERATORS WITH VARIABLES - ASSIGNMENT OPERATORS 

let gainedDollar = 3;
let lostDollar = 50;
gainedDollar++; // ADDS ONE  
lostDollar--; // REMOVES ONE 

let numberOfPeople = 24
numberOfPeople *= 2; // times the variable by 2

let numberOfTriplets = 99 
numberOfTriplets /= 3 // divides the variable by 3 

// can do the same with + and - operators 

// USING VARIABLES IN STRINGS 
const faveSupe = 'Judge Dredd'; 
console.log('My favourite superhero is ' + faveSupe);

// or you can use interpolation 

const leastFaveSupe = 'Superman...ugh';  
console.log('My absolute worst superhero is ${leastFaveSupe}.'); // REMEMBER THAT THE DOLLAR GOES BEFORE THE CURLY BRACKETS 

// CHECKING THE TYPE OF DATA YOU ARE USING 
console.log(typeof faveSupe) // will return 'string' as the data inside it is a string 









